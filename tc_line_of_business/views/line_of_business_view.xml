<odoo>

    <record id="view_form_business" model="ir.ui.view">
        <field name="name">Line of Business Form</field>
        <field name="model">line.of.business</field>
        <field name="arch" type="xml">

            <form>
                <group>
                    <field name="name" />
                </group>
            </form>

        </field>
    </record>

    <record id="view_tree_business" model="ir.ui.view">
        <field name="name">Line of Business List</field>
        <field name="model">line.of.business</field>
        <field name="arch" type="xml">

            <tree>
                <field name="name" />
                <field name="code" />
            </tree>
            
        </field>
    </record>

